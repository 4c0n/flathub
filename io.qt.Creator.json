{
    "app-id": "io.qt.QtCreator",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15",
    "sdk": "org.kde.Sdk",
    "command": "qtcreator",
    "rename-desktop-file": "org.qt-project.qtcreator.desktop",
    "rename-appdata-file": "org.qt-project.qtcreator.appdata.xml",
    "rename-icon": "QtProject-qtcreator",
    "finish-args": [
        "--share=ipc",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--filesystem=host"
    ],
    "modules": [
        {
            "name": "clang",
            "buildsystem": "cmake-ninja",
            "subdir": "llvm",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DLLVM_PARALLEL_LINK_JOBS=1",
                "-DLLVM_ENABLE_PROJECTS=clang"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/llvm/llvm-project.git",
                    "tag": "llvmorg-11.0.0"
                }
            ]
        },
        {
            "name": "qt-creator",
            "buildsystem": "qmake",
            "make-install-args": [
                "INSTALL_ROOT=/app"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://code.qt.io/qt-creator/qt-creator.git",
                    "tag": "v4.13.2"
                }
            ]
        }
    ]
}
